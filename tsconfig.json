{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": false,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "include": ["src/**/*", "bin", "test"],
  "exclude": ["node_modules", "**/*-spec.ts"],
  "extendionOptions": {
    "src": "src",
    "dest": "dist/src",
    "extendions": ["json"]
  }
}
